@model IEnumerable<Ketabkhana.Models.VM.CustomerModel>
@{
    ViewBag.Title = "AllCustomers";
}

<h2>All Customers</h2>

<table id="table">
    <tr>
        <th>ID</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Gender</th>
        <th>Dob</th>
        <th>Email</th>
        <th>Username</th>
        <th>Action</th>
    </tr>
    @foreach (var c in Model)
    {
        <tr>
            <td>@c.id</td>
            <td>@c.firstName</td>
            <td>@c.lastName</td>
            <td>@c.gender</td>
            <td>@c.dob</td>
            <td>@c.email</td>
            <td>@c.username</td>
            <td><a href="/Admin/UpdateCustomer/@c.id" class="btn btn-success">Edit</a> 
            <a href="/Admin/DeleteCustomer/@c.id"class="btn btn-danger">Delete</a></td>
        </tr>
    }
</table>

