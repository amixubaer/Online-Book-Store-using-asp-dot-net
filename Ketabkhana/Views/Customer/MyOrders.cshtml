@model IEnumerable<Ketabkhana.Models.EF.Order>
@{
    ViewBag.Title = "MyOrders";
}

<h2>My Orders</h2>


<table  id="table">
    <tr>
        <th>Id</th>
        <th>Amount</th>
        <th>Status</th>
        <th>Customer ID</th>
        <th>Action</th>

    </tr>

    @foreach (var o in Model)
    {
        <tr>
            <td>@o.id</td>
            <td>@o.amount</td>
            <td>@o.status</td>
            <td>@o.customerId</td>
            <td><a href="/Customer/OrdersDetails/@o.id" class="btn btn-success">Details</a></td>

        </tr>
    }
</table>